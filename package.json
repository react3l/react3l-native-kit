{
  "name": "react3l-native-kit",
  "version": "0.1.0-rc.3",
  "description": "React3L Kit for React Native",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/react3l/react3l-native-kit",
  "author": "thanhtunguet <thanhtung.uet@gmail.com> (https://github.com/react3l)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/react3l/react3l-native-kit/issues"
  },
  "homepage": "https://github.com/react3l/react3l-native-kit#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@react-native-community/eslint-config": "^2.0.0",
    "@react-native-picker/picker": "^1.16.5",
    "@react-navigation/native": "^6.0.2",
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/jest": "^26.0.0",
    "@types/react": "^16.9.19",
    "@types/react-native": "0.62.13",
    "@types/react-native-calendar-picker": "^7.0.2",
    "@types/react-native-vector-icons": "^6.4.8",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "babel-plugin-macros": "^3.1.0",
    "commitlint": "^11.0.0",
    "eslint": "^7.2.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "moment": "^2.29.1",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "react": "16.13.1",
    "react-native": "0.63.4",
    "react-native-atomic-styles": "^0.0.1-rc.8",
    "react-native-builder-bob": "^0.18.1",
    "react-native-calendar-picker": "^7.1.2",
    "react-native-css-module": "thanhtunguet/react-native-css-module",
    "react-native-linear-gradient": "^2.5.6",
    "react-native-modal": "^12.0.3",
    "react-native-safe-area-context": "^3.3.0",
    "react-native-svg": "^12.1.1",
    "react-native-svg-types": "thanhtunguet/react-native-svg-types",
    "react-native-text-gradient": "^0.1.7",
    "react-native-vector-icons": "^8.1.0",
    "react3l-cli": "^1.0.2",
    "react3l-common": "^6.0.3-rc.1",
    "release-it": "^14.2.2",
    "rxjs": "^7.3.0",
    "ts-nameof.macro": "^4.2.2",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "@react-native-picker/picker": "^1",
    "@react-navigation/native": "^6",
    "react": "*",
    "react-native": "*",
    "react-native-atomic-styles": "*",
    "react-native-calendar-picker": "^7",
    "react-native-linear-gradient": "^2",
    "react-native-modal": "^12",
    "react-native-safe-area-context": "^3",
    "react-native-svg": "^12",
    "react-native-text-gradient": "*",
    "react-native-vector-icons": "^8",
    "react3l-common": "^6",
    "rxjs": "^7",
    "react-native-animatable": "^1.3.3"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "@react-native-community",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "@typescript-eslint/consistent-type-imports": "error",
      "@typescript-eslint/no-non-null-assertion": "off",
      "no-shadow": "off",
      "@typescript-eslint/no-empty-interface": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/ban-ts-comment": "error"
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "dependencies": {}
}
